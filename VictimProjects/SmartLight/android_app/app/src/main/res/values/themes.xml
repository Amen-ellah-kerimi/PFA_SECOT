<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.SmartLight" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/on_primary</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
        
        <!-- Custom attributes -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        <item name="materialSliderStyle">@style/Widget.App.Slider</item>
        <item name="switchStyle">@style/Widget.App.Switch</item>
    </style>

    <!-- Custom CardView style -->
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
    </style>

    <!-- Custom Slider style -->
    <style name="Widget.App.Slider" parent="Widget.MaterialComponents.Slider">
        <item name="labelStyle">@style/Widget.App.Tooltip</item>
        <item name="thumbColor">@color/accent</item>
        <item name="trackColorActive">@color/accent</item>
        <item name="trackColorInactive">@color/primary_light</item>
    </style>

    <!-- Custom Switch style -->
    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.MaterialSwitch">
        <item name="thumbTint">@color/accent</item>
        <item name="trackTint">@color/primary_light</item>
    </style>

    <!-- Custom Tooltip style -->
    <style name="Widget.App.Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="backgroundTint">@color/accent</item>
        <item name="android:textColor">@color/on_primary</item>
    </style>
</resources> 